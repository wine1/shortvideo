

.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: rgba(22, 24, 35,.1);
}

.progress-bar .bar {
  /* border: 1px solid rgba(255,255,255,.3); */
  background: rgba(255,255,255,.3);
  height: 1px;
}

.video {
  height: 100%;
  width: 100%;
}


.icon-play {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 120rpx;
  height: 120rpx;
  margin: -60rpx 0 0 -60rpx;
  z-index: 10;
  animation: myscale 0.3s ease-in;
  opacity: .6;
}

@keyframes myscale {
  from {
    transform: scale(2);
  }

  to {
    transform: scale(1);
  }
}
